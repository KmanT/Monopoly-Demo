<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<?scenebuilder-stylesheet @style.css?>


<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cis.monopoly.guiElements.Controller"
      prefHeight="1000.0" prefWidth="1500.0"
      alignment="CENTER" spacing="10"
      styleClass="root">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="How many players?"/>
    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Button text="Player v. COM" fx:id = "btnPvC"
            GridPane.columnIndex="0" GridPane.rowIndex="0"
            maxWidth="150" maxHeight="100"
            onAction="#startGameClickOne"/>
        <Button text="2 Players" fx:id = "btnTwoPlayer"
            GridPane.columnIndex="1" GridPane.rowIndex="0"
            maxWidth="150" maxHeight="100"
            onAction="#startGameClickTwo"/>
        <Button text="3 Players" fx:id = "btnThreePlayer"
            GridPane.columnIndex="0" GridPane.rowIndex="1"
            maxWidth="150" maxHeight="100"
            onAction="#startGameClickThree"/>
        <Button text="4 Players" fx:id = "btnFourPlayer"
            GridPane.columnIndex="1" GridPane.rowIndex="1"
            maxWidth="150" maxHeight="100"
            onAction="#startGameClickFour"/>
    </GridPane>

    <Button text="Back" fx:id="btnMainMenu" onAction="#mainMenuClick"/>

    <stylesheets>
        <URL value="@main-style.css" />
    </stylesheets>


</VBox>
