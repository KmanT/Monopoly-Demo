<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<?scenebuilder-stylesheet @style.css?>


<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cis.monopoly.Controller"
      prefHeight="800.0" prefWidth="1200.0"
      alignment="CENTER" spacing="10"
      styleClass="root">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="How many players?"/>
    <GridPane alignment="CENTER">
        <Button text="Player v. COM"
            GridPane.columnIndex="0" GridPane.rowIndex="0"
            maxWidth="150" maxHeight="100"/>
        <Button text="2 Players"
            GridPane.columnIndex="1" GridPane.rowIndex="0"
            maxWidth="150" maxHeight="100"/>
        <Button text="3 Players"
            GridPane.columnIndex="0" GridPane.rowIndex="1"
            maxWidth="150" maxHeight="100"/>
        <Button text="4 Players"
            GridPane.columnIndex="1" GridPane.rowIndex="1"
            maxWidth="150" maxHeight="100"/>
    </GridPane>

    <Button text="Back" fx:id="btnMainMenu" onAction="#mainMenuClick"/>

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>


</VBox>
